<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cocoawork.appstore.mapper.RoleMapper">
    <insert id="addRole" parameterType="com.cocoawork.appstore.entity.Role">
        INSERT INTO role (role_name, role_title
       <if test="permissions!=null and permissions.size()>0">,role_permissions</if>
       )
        VALUES (#{roleName}, #{roleTitle}
       <if test="permissions!=null and permissions.size()>0">
        <foreach collection="permissions" open="," close="" separator="','"  item="permission">&apos;${permission.id}&apos;</foreach>
       </if>
       )
    </insert>
</mapper>